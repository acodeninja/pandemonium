{
  "name": "pandemonium",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:release": "npm run init:targets && npm run build:release:macos",
    "build:release:macos": "npm run tauri build -- --target universal-apple-darwin",
    "init:targets": "npm run init:targets:macos",
    "init:targets:macos": "rustup target add x86_64-apple-darwin aarch64-apple-darwin",
    "preview": "vite preview",
    "tauri": "tauri",
    "prepare": "husky"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@tauri-apps/cli": "^2",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "husky": "^9.1.7",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  }
}
